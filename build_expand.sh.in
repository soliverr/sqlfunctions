#! /bin/bash
#
# Expand configure variables in autogenerated scripts
#

# Files to proceed ---------------------------------------------------------------------
if [ $# -gt 0 ] ; then
    files="$@"
else
    files="install.sql uninstall.sql"
fi

# Package identification ---------------------------------------------------------------
PACKAGE_NAME="@PACKAGE_NAME@"
PACKAGE_TARNAME="@PACKAGE_TARNAME@"
PACKAGE_VERSION="@PACKAGE_VERSION@"
PACKAGE_STRING="@PACKAGE_STRING@"

# Common variables ---------------------------------------------------------------------
prefix="@prefix@"
exec_prefix="@exec_prefix@"
sbindir="@sbindir@"
bindir="@bindir@"
libdir="@libdir@"
libexecdir="@libexecdir@"
sysconfdir="@sysconfdir@"
confdir="@confdir@"
sectionconfdir="${confdir}/.."
localstatedir="@localstatedir@"
datarootdir="@datarootdir@"
datadir="@datadir@"
logdir="@logdir@"
pkglibexecdir="@pkglibexecdir@"
docdir="@docdir@"
spooldir="@spooldir@"
pkgspooldir="@pkgspooldir@"


sedf=configure_expand.sed.$$

cat << __EOFF__ | tr -d '!' > $sedf
s#\${!PACKAGE_NAME!}#$PACKAGE_NAME#g
s#\${!PACKAGE_TARNAME!}#$PACKAGE_TARNAME#g
s#\${!PACKAGE_VERSION!}#$PACKAGE_VERSION#g
s#\${!PACKAGE_STRING!}#$PACKAGE_STRING#g
s#\${!prefix!}#$prefix#g
s#\${!exec_prefix!}#$exec_prefix#g
s#\${!sbindir!}#$sbindir#g
s#\${!bindir!}#$bindir#g
s#\${!libdir!}#$libdir#g
s#\${!libexecdir!}#$libexecdir#g
s#\${!sysconfdir!}#$sysconfdir#g
s#\${!confdir!}#$confdir#g
s#\${!sectionconfdir!}#$sectionconfdir#g
s#\${!localstatedir!}#$localstatedir#g
s#\${!datarootdir!}#$datarootdir#g
s#\${!datadir!}#$datadir#g
s#\${!logdir!}#$logdir#g
s#\${!pkglibexecdir!}#$pkglibexecdir#g
s#\${!docdir!}#$docdir#g
s#\${!spooldir!}#$spooldir#g
s#\${!pkgspooldir!}#$pkgspooldir#g

__EOFF__



for f in $files; do
   echo "Process file $f"
   sed --in-place --file $sedf $f
done

rm -f $sedf
